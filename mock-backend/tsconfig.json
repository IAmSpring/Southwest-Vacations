{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "noImplicitAny": true
  },
  "include": ["./*.ts", "../src/sharedTypes.ts"],
  "exclude": ["node_modules", "dist"]
} 